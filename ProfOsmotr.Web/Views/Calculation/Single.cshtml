@{
    ViewBag.Title = "Индивидуальный расчет";
    ViewBag.PageId = "calculation-single";
}
<div class="row justify-content-center">
    <form name="singleCalc" class="col-md-6">
        <h3>Создание индивидуального расчета</h3>
        <div class="form-group">
            <label for="ProfessionName">Профессия</label>
            <input type="text" id="ProfessionName" name="ProfessionName" class="form-control" />
        </div>
        <div class="form-group">
            <label for="OrderItems">Выберите один или несколько пунктов</label>
            <select id="OrderItems"></select>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" name="IsWoman" id="IsWoman" class="form-check-input" />
                <label for="IsWoman" class="form-check-label">Женщина</label>
            </div>
            <div class="form-check">
                <input type="checkbox" name="IsOver40" id="IsOver40" class="form-check-input" />
                <label for="IsOver40" class="form-check-label">Cтарше 40 лет</label>
            </div>
        </div>
        <input id="createSingleCalculation" type="submit" value="Рассчитать" class="btn btn-primary" />
    </form>
</div>
